<div class="row">
  <div class="col-md-6">
    <h2>Login</h2>
    <form class="form login-form needs-validation">
      <div class="form-group col-md-4 mb-3">
        <label for="username-login">Username:</label>
        <input type="text" class="form-control" id="username-login" placeholder="Enter username" required>
      </div>
      <div class="form-group col-md-4 mb-3">
        <label for="password-login">Password:</label>
        <input type="password" class="form-control" id="password-login" placeholder="Password" required>
      </div>
      <button type="submit" class="btn btn-primary">Login</button>
    </form>
  </div>

  <div class="col-md-6">
    <h2>Signup</h2>
    <form class="form signup-form needs-validation">
      <div class="form-group col-md-4 mb-3">
        <label for="username-signup">Username:</label>
        <input type="text" class="form-control" id="username-signup" placeholder="Create a username" required>
      </div>
      <div class="form-group col-md-4 mb-3">
        <label for="email-signup">Email Address:</label>
        <input type="email" class="form-control" id="email-signup" aria-describedby="emailHelp"
          placeholder="Enter email" required>
        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
      </div>
      <div class="form-group col-md-4 mb-3">
        <label for="password-signup">Password:</label>
        <input type="password" class="form-control" id="password-signup" placeholder="Password" required>
        <small id="emailHelp" class="form-text text-muted">Minimum of 8 characters.</small>
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
  </div>
</div>

<script src="/js/login.js"></script>