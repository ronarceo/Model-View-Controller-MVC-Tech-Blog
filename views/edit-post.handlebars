<h2>Edit Post</h2>
<form class="edit-post-form">
    <div>
        <input name="post-title" type="text" value="{{post.title}}" id="post-title" />
    </div>
    <div>
        <textarea name="post-text" id="post-text">{{post.post_text}}</textarea>
    </div>
    <div>
        Posted on {{format_date post.created_at}}
    </div>
    <button type="submit" class="btn btn-sm btn-primary" id="updatePostButton">Update Post</button>
    <button type="button" class="btn btn-sm btn-danger">Delete Post</button>
</form>

<script src="/js/edit-post.js"></script>