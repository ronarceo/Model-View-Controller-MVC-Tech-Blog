<div class="card post">
  <div class="card-body">
    <h2 class="card-title">{{title}}</h2>
    <p class="card-subtitle">Posted by {{user.username}} on {{format_date createdAt}}</p>
    <p class="card-text">{{post_text}}</p>

    <div class="comments card">
      {{#each comments as |comment|}}
      <section class="comment card-body">
        <div class="meta text-muted">
          {{user.username}} commented on {{format_date created_at}}
        </div>
        <div class="text">
          {{comment_text}}
        </div>
      </section>
      {{/each}}
    </div>
  </div>
</div>

{{#if logged_in}}
<div class="container">
  <form class="comment-form">
    <h4>Post a comment:</h4>
    <div class="mb-3">
      <textarea name="comment-body" id="comment-text"></textarea>
    </div>

    <div class="mb-3">
      <button type="submit" class="btn btn-primary">Post Comment</button>
    </div>
  </form>
</div>

<script src="/js/comment.js"></script>
{{/if}}