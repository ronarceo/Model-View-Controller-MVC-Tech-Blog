{{#each posts as |post| }}
<div class="card post">
  <div class="card-body">
    <div class="card-title">
      <h2>
        <a href="post/{{id}}">{{title}}</a>
      </h2>
      <p class="card-subtitle text-muted">Posted by {{user.username}} on {{format_date created_at}}</p>
    </div>
    <p class="card-body">
      {{post_text}}
    </p>
  </div>
</div>
{{/each}}