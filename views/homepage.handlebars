{{#each posts as |post| }}
<div class="row mb-4 post">
  <div class="col-md-5">
    <h2>
      <a href="post/{{id}}">{{title}}</a>
    </h2>
    <p>Created by {{user.username}} on {{format_date created_at}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{post_text}}
    </p>
  </div>
</div>
{{/each}}